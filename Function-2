document.getElementById('generate').addEventListener('click', () => {
    const username = document.getElementById('username').value.trim();
    
    if (username) {
        const gmail = generateGmail(username);
        const password = generatePassword(12); // Generate a 12-character password
        
        // Display the generated Gmail and password
        document.getElementById('gmail').textContent = `Generated Gmail: ${gmail}`;
        document.getElementById('password').textContent = `Generated Password: ${password}`;
    } else {
        alert("Please enter a username.");
    }
});
